# Multi-stage build for training service using NVIDIA NGC PyTorch container
# This addresses the deprecation of nvidia/cuda:12.1.0-runtime-ubuntu22.04
# NGC containers include PyTorch, CUDA, and optimized ML libraries pre-installed

FROM nvcr.io/nvidia/pytorch:25.04-py3 AS deps-train
WORKDIR /build

# NGC container already includes:
# - Python 3.12
# - PyTorch 2.7+ with CUDA 12.6
# - CUDA runtime libraries
# - cuDNN, NCCL, and other NVIDIA optimizations
# - Many common ML libraries

# Install system dependencies not included in NGC base
RUN apt-get update && apt-get install -y \
    postgresql-client \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy centralized requirements and service-specific requirements
COPY services/requirements/ ./requirements/
COPY services/training/requirements.txt .

# Install additional dependencies not in NGC container
# Skip PyTorch (already in NGC), install other requirements
RUN pip install --upgrade pip && \
    { cat requirements/base.txt requirements/data.txt; \
    grep -v '^#' requirements.txt | grep -v '^-r' | grep -v '^$'; } | \
    grep -v '^-r' | grep -v '^#' | grep -v '^$' | \
    grep -v '^torch' | grep -v '^--index-url' > /tmp/all_reqs.txt && \
    pip install --user --no-cache-dir --trusted-host pypi.org --trusted-host files.pythonhosted.org \
    -r /tmp/all_reqs.txt

FROM nvcr.io/nvidia/pytorch:25.04-py3
WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Copy installed packages from builder
COPY --from=deps-train /root/.local /home/appuser/.local

# Create CuPy cache directory with proper permissions
RUN mkdir -p /home/appuser/.cupy && chown -R appuser:appuser /home/appuser/.cupy

# Copy application code
COPY --chown=appuser:appuser services/training/src/ ./src/
COPY --chown=appuser:appuser services/training/entrypoint.py ./entrypoint.py

# Copy common module
COPY --chown=appuser:appuser services/common/ ./common/

# Copy backend modules (needed for storage access)
COPY --chown=appuser:appuser services/backend/src/ ./backend/src/

# Set environment
ENV PATH=/home/appuser/.local/bin:$PATH \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    NVIDIA_VISIBLE_DEVICES=all \
    NVIDIA_DRIVER_CAPABILITIES=compute,utility

USER appuser
EXPOSE 8002

# Health check - check if API server is responsive
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# Start both FastAPI API and Celery worker via entrypoint
CMD ["python", "entrypoint.py"]
